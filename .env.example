# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/thrifttech_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thrifttech_db
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (SendGrid)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@thrifttech.com
FROM_NAME=ThriftTech

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Mobile Money API Configuration
# MTN Mobile Money
MTN_API_USER=your-mtn-api-user
MTN_API_KEY=your-mtn-api-key
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_ENVIRONMENT=sandbox
MTN_BASE_URL=https://sandbox.momodeveloper.mtn.com

# AirtelTigo Money
AIRTELTIGO_API_KEY=your-airteltigo-api-key
AIRTELTIGO_SECRET=your-airteltigo-secret
AIRTELTIGO_ENVIRONMENT=sandbox
AIRTELTIGO_BASE_URL=https://sandbox.airteltigo.com

# Telecel Cash
TELECEL_API_KEY=your-telecel-api-key
TELECEL_SECRET=your-telecel-secret
TELECEL_ENVIRONMENT=sandbox
TELECEL_BASE_URL=https://sandbox.telecel.com

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Ghana SMS Configuration
SMS_API_KEY=your-ghana-sms-api-key
SMS_SENDER_ID=ThriftTech

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret-for-payment-verification

# Admin Configuration
ADMIN_EMAIL=admin@thrifttech.com
ADMIN_PHONE=+233123456789

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://thrifttech.com
